<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="@dimen/d20">

    <TextView
        android:id="@+id/item_view_title"
        android:layout_width="0dp"
        android:layout_height="@dimen/d30"
        android:layout_marginTop="@dimen/d10"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:lineSpacingExtra="0dp"
        android:maxLines="2"
        android:textColor="@color/black"
        android:textSize="@dimen/d23"
        app:layout_constraintEnd_toStartOf="@+id/item_view_show_btn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="title" />

    <FrameLayout
        android:id="@+id/item_view_show_btn"
        android:layout_width="@dimen/d30"
        android:layout_height="@dimen/d30"
        android:layout_marginStart="@dimen/d08"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/item_view_title"
        app:layout_constraintTop_toTopOf="@+id/item_view_title">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="ï¿¥" />
<!--        <ImageView-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="match_parent"-->
<!--            android:contentDescription="@string/show_hide_btn"-->
<!--            android:src="@drawable/show_hide_btn" />-->
    </FrameLayout>

    <TextView
        android:id="@+id/item_view_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingTop="@dimen/d05"
        android:textSize="@dimen/d18"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/item_view_title"
        tools:text="description"
        tools:visibility="visible" />

    <View
        android:id="@+id/item_view_guide"
        android:layout_width="match_parent"
        android:layout_height="@dimen/d01"
        android:layout_marginTop="@dimen/d05"
        android:background="@color/teal_200"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/item_view_description" />

</androidx.constraintlayout.widget.ConstraintLayout>